{
  "extends": "./tsconfig_extends.json",
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "ES2015.Iterable",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "src/global.d.ts",
    "./src/global.d.ts"
  ],
  "exclude": [
    "**/*.test.js"
  ]
}
